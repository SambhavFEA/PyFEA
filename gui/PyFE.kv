#:kivy 1.10

<OpenDialog>:
    but:but
    txt_inp:txt_inp
    fc:filechooser

    BoxLayout:
        orientation:'vertical'

        BoxLayout:

            size_hint:1,None
            height:dp(30)

            Button:
                id: but
                size_hint:None,1
                width:dp(40)
                text:"Open"
                on_press:root.open()

            NumericInput:
                id: txt_inp
                multiline: False
                text: filechooser.path

        FileChooser:
            id:filechooser
            FileChooserIconLayout
            FileChooserListLayout


<ModelScreen>:
    grid:grid
    row_one:row_one

    BoxLayout:
        orientation:'vertical'

        BoxLayout:
            orientation:'vertical'
            butOpen:butOpen
            butSave:butSave
            butMaterial:butMaterial


            BoxLayout:
                id:row_one
                height:dp(40)
                dropMat:dropMat

                Button:
                    id: butOpen
                    text:"Open"
                    on_press:root.open_screen()

                Button:
                    id: butSave
                    text:"Save"
                    on_press: root.save()

                SolnProcDropDown:
                    id: dropSoln

                MaterialDropDown:
                    id: dropMat

                Button:
                    id: butMaterial
                    text:"Material"
                    on_press:root.material_screen()

                ToggleButton:
                    id: tbutPart
                    group: "container_action"
                    text:"Part"

                ToggleButton:
                    id: tbutForceV
                    group: "container_action"
                    text:"Forces V"

                ToggleButton:
                    id: tbutForceH
                    group: "container_action"
                    text:"Forces H"

                ToggleButton:
                    id: tbutSupportV
                    group: "container_action"
                    text:"Supports V"

                ToggleButton:
                    id: tbutSupportH
                    group: "container_action"
                    text:"Supports H"

            BoxLayout:
                id:row_two
                height:40

                Label:
                    text: 'X'

                NumericInput:
                    id: x
                    multiline: False

                Label:
                    text: 'Y'

                NumericInput:
                    id: y
                    multiline: False

        Blackboard:
            id: grid
            size_hint:None,None
            width:600
            height:600
            on_press:self.select_rec()
            on_release:self.stop_press()
            canvas:

<MaterialScreen>:
    material1: young
    material2: poisson
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            height: 40

            Label:
                text: 'Material Properties'

        BoxLayout:
            height: 40

            Label:
                text: 'Young Modulus'

            NumericInput:
                id: young
                multiline: False

        BoxLayout:
            height: 40

            Label:
                text: 'Poisson ratio'

            NumericInput:
                id: poisson
                multiline: False

        BoxLayout:
            height: 40

            Button:
                text: 'Save'
                on_press: root.model_screen()


<ResultScreen>:

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            height: 40

            Button:
                text: 'Solve'
                on_press: root.solve()

        Blackboard:
            id: result
            size_hint:None,None
            width:600
            height:600
            canvas:
